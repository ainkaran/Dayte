<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:layout_margin="0dp"
    tools:context="Dayte.MainActivity"
    android:orientation="vertical"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#649175"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="68.5dp"
        android:layout_height="80dp"
        android:focusable="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/pictureofgauss"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/>
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Dayte"
        android:textSize="55dp"
        android:layout_marginLeft="2dp"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        />
    </LinearLayout>
        </LinearLayout>

    <TextView
        android:id="@+id/introText"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="@string/intro_text"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:text="Enter the date here to find out."/>


    <EditText
        android:id="@+id/editText"
        android:focusable="true"
        android:hint="mm/dd/yyyy"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:textStyle="bold"
        android:layout_height="50sp"
        android:ems="10"
        android:textSize="30sp"
        android:inputType="date"
        android:maxLength="10"
        >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/resultTextView"
        android:textColor="#000000"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_margin="10dp"
        android:text="The result will show up here :)"
        android:textSize="20sp"
        />


    <TextView
        android:id="@+id/whoIsThatView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Who is that ancient-looking guy?"
        android:textColor="#000000"
        android:gravity="bottom"
        android:layout_marginBottom="10dp"/>

</LinearLayout>